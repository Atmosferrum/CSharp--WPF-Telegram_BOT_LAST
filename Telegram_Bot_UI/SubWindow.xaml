<Window x:Class="Telegram_Bot_UI.SubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telegram_Bot_UI"
        mc:Ignorable="d"
        Title="SubWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer>
            <TreeView x:Name="HistoryTree"
                  HorizontalAlignment="Stretch" 
                  VerticalAlignment="Stretch" />
        </ScrollViewer>

        <Button x:Name="CloseHistory" 
                Content="Close" 
                HorizontalAlignment="Right" 
                Height="50" 
                Margin="0,10,35,0" 
                VerticalAlignment="Top" 
                Width="50" 
                RenderTransformOrigin="0.472,0.805" Click="CloseHistory_Click" 
                />
    </Grid>
</Window>
